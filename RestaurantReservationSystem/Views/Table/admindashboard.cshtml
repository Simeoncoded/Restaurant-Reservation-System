@model RestaurantReservationSystem.ViewModels.AdminPageVM

<div class="container mt-4">
    <h1 class="text-center">Admin Dashboard</h1>
    <hr />

    <!-- Stats Section -->
    <div class="row text-center mb-4">
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h5>Total Reservations Today</h5>
                    <p class="display-4">@Model.TotalReservationsToday</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h5>Available Tables</h5>
                    <p class="display-4">@Model.AvailableTables</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h5>Reservations This Week</h5>
                    <p class="display-4">@Model.ReservationsThisWeek</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h5>Checked-In Reservations</h5>
                    <p class="display-4">@Model.CheckedInReservations</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Upcoming Reservations -->
    <div class="mt-4">
        <h3>Upcoming Reservations</h3>
        @if (Model.UpcomingReservations != null && Model.UpcomingReservations.Any())
        {
            <ul class="list-group">
                @foreach (var reservation in Model.UpcomingReservations)
                {
                    <li class="list-group-item">
                        <strong>@(reservation.Date.HasValue ? reservation.Date.Value.ToString("d") : "N/A")</strong> - @reservation.Summary
                    </li>
                }
            </ul>
        }
        else
        {
            <p>No upcoming reservations at the moment.</p>
        }
    </div>
</div>



<div class="mt-5">
    <h3 class="text-center">Reservation Distribution by Table</h3>
    <canvas id="myChart" height="100"></canvas>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const chartData = @Html.Raw(ViewData["data"]);

            const labels = chartData.map(item => item.table);
            const values = chartData.map(item => item.count);

            const ctx = document.getElementById('myChart').getContext('2d');
            const myChart = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: labels,
                    datasets: [{
                        label: 'Reservations',
                        data: values,
                        backgroundColor: 'rgba(75, 192, 192, 0.6)',
                        borderColor: 'rgba(75, 192, 192, 1)',
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    scales: {
                        y: {
                            beginAtZero: true,
                            precision: 0
                        }
                    },
                    plugins: {
                        legend: { display: false },
                        title: {
                            display: true,
                            text: 'Reservations by Table'
                        }
                    }
                }
            });
        });
    </script>
}
