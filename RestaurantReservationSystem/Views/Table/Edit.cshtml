@model RestaurantReservationSystem.Models.Table

<div class="form-container">
    <h4>Edit Table</h4>
    <hr />
    <div class="row">
        <div class="col-md-12">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ID" />
                <input type="hidden" asp-for="RowVersion" />

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="TableNumber" class="control-label"></label>
                            <input asp-for="TableNumber" class="form-control" data-toggle="tooltip" title="Enter the table number" />
                            <span asp-validation-for="TableNumber" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Capacity" class="control-label"></label>
                            <input asp-for="Capacity" class="form-control" data-toggle="tooltip" title="Enter table capacity" />
                            <span asp-validation-for="Capacity" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Status" class="control-label"></label>
                            <select asp-for="Status" class="form-control" asp-items="Html.GetEnumSelectList<TableStatus>()" data-toggle="tooltip" title="Select table status"></select>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Location" class="control-label"></label>
                            <input asp-for="Location" class="form-control" data-toggle="tooltip" title="Specify table location" />
                            <span asp-validation-for="Location" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group mt-3">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa-solid fa-save"></i> Save
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fa fa-arrow-left" aria-hidden="true"></i> Back to List
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(function () {
            $('[data-toggle="tooltip"]').tooltip();
        });
    </script>
}

<style>
    .form-container {
        background: rgba(255, 255, 255, 0.9);
        backdrop-filter: blur(10px);
        border-radius: 15px;
        box-shadow: 0 0 20px rgba(149, 117, 205, 0.3);
        padding: 2rem;
        margin: 2rem auto;
    }

    h4 {
        color: #6A1B9A;
        font-weight: 600;
        border-bottom: 2px solid #9C27B0;
        padding-bottom: 0.5rem;
    }

    .form-group label {
        color: #4A148C;
        font-weight: 500;
    }

    .form-control {
        border: 1px solid #E1BEE7;
        border-radius: 8px;
        transition: all 0.3s ease;
    }

        .form-control:focus {
            border-color: #9C27B0;
            box-shadow: 0 0 8px rgba(156, 39, 176, 0.2);
        }

    .btn-primary {
        background: linear-gradient(45deg, #9C27B0, #6A1B9A);
        border: none;
        padding: 0.3rem 1rem;
        border-radius: 5px;
        transition: all 0.3s ease;
        height: 37.5px;
    }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(156, 39, 176, 0.4);
        }

    .tooltip-inner {
        background-color: #9C27B0;
        border-radius: 4px;
    }

    .tooltip.bs-tooltip-top .tooltip-arrow::before {
        border-top-color: #9C27B0;
    }

    .form-check-label {
        color: #4A148C;
    }

    .form-check-input:checked {
        background-color: #9C27B0;
        border-color: #6A1B9A;
    }

    select:disabled {
        background-color: #f8f9fa;
        color: #6c757d;
        font-style: italic;
    }

    .text-danger {
        color: #d32f2f !important;
        font-size: 0.9em;
    }

    @@media (max-width: 768px) {
        .form-container {
            margin: 1rem;
            padding: 1.5rem;
        }

        .row > div[class^="col-"] {
            margin-bottom: 1rem;
        }
    }
</style>

