@model RestaurantReservationSystem.ViewModels.ReservationWizardVM
<fieldset>
    <legend class="section-title">Reservation Details</legend>
    <div class="row g-3">
        <div class="col-md-4">
            <label asp-for="Date" class="control-label"></label>
            <input asp-for="Date" type="date" class="form-control" data-toggle="tooltip" title="Select the reservation date" />
            <span asp-validation-for="Date" class="text-danger"></span>
        </div>

        <div class="col-md-4">
            <label class="form-label">Table</label>
            <select asp-for="TableID" class="form-select" asp-items="ViewBag.TableID"></select>
            <span asp-validation-for="TableID" class="text-danger"></span>
        </div>

        <div class="col-md-4">
            <label class="form-label">Party Size</label>
            <input asp-for="PartySize" class="form-control" min="1" />
            <span asp-validation-for="PartySize" class="text-danger"></span>
        </div>
    </div>

    <div class="mt-3">
        <label class="form-label">Time</label>
        <div id="availableTimes" class="d-flex flex-wrap gap-2"></div>
        <input type="hidden" id="Time" name="Time" value="@(Model.Time?.ToString() ?? "")" />
        <span asp-validation-for="Time" class="text-danger"></span>
    </div>

</fieldset>

