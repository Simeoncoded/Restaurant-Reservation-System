@model RestaurantReservationSystem.Models.Reservation

@{
    ViewData["Title"] = "Cancel Reservation";
}

<h2>Cancel Reservation</h2>

<p>Are you sure you want to cancel this reservation?</p>

<div>
    <h4>Reservation Details</h4>
    <p>
        <strong>Name:</strong> @Model.FirstName @Model.LastName <br />
        <strong>Phone:</strong> @Model.Phone <br />
        <strong>Date:</strong> @Model.Date<br />
        <strong>Time:</strong> @Model.Time<br />
        <strong>Table:</strong> @Model.Table.Summary
    </p>
</div>

<form asp-action="Cancel" method="post">
    <input type="hidden" asp-for="ID" />
    <input type="submit" value="Yes Cancel Reservation" class="btn btn-danger" /> |
    <a asp-action="Index" class="btn btn-secondary">No, Go Back</a>
</form>
